	<title>VtagO - Landing Page</title>
	<!--Content Section -->
	<div id="signin_content_wrapper">
		<div id="signin_content">
			<div id="left_col">
				<div class="bg-shadow">&nbsp;<!--this is for side shadow --></div>
				<div class="landing_form_heading">
					<h1>Login to VtagO</h1>
					<!--<p>Welcome, please login with your account details or click on "Sign up" for creating new account.</p>-->
					<p class="landing_tagline">Video Just Got Personal</p>
				</div>
				<%= form_for :session, :url => "email_subscribe" do |form| %>
					<div class="landing-form">				
						<div id="manual_signup_wrapper"><!-- this div is hidden in order to make it visible you should remove the hide property from this id in the sign_up.js file -->			
							<div id="manual_signup_link" style="font-size:16px;">
								<% unless @new_sub.errors.any? %>
									Thank you for subscribing to VtagO!</br> We'll contact you soon. </br>:-)
								<% else %>
									<%= @new_sub.errors[:email].first %>
								<% end %>
							</div>
						</div><!--manual_signup_wrapper -->	
					</div>
			<% end %>
			</div>
			<div id="right_col">
				<a href="/sign_in">
					<img src="images/banner-signin.jpg" alt="Sign In" />
				</a>
			</div>
			<br class="clear" />
		</div>
	</div>
	<!--Content Section End -->

<script>
	function check_validation()
	{
		var x=document.forms["session"]["email"].value;
		var atpos=x.indexOf("@");
		var dotpos=x.lastIndexOf(".");
		if (atpos<1 || dotpos<atpos+2 || dotpos+2>=x.length)
		  {
		  alert("Not a valid e-mail address");
		  return false;
		  }
	}
</script>