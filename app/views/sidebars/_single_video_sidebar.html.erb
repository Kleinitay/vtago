<div id="right_content">
	<div class="facebook_app_link"><a href=<%= Rails.env.production? ? "http://apps.facebook.com/vtagoappbeta" : "http://apps.facebook.com/vtagoapp"%> ><img src="/images/fb_banner.jpg"></a></div>
	<%= render :partial => "sidebars/search_box" %>
	<div id="accordion">
		<% unless @user_videos_page %>
			<h3 class="accordionButton"><a href="javascript: void(0);">More Vidoes by <%= @user.nick %></a></h3>
			<div class="trending-box accordionContent">
				<%= render :partial => "sidebars/video_list_box", :locals => {:sidebar_videos => @user_videos, :user_list => true }%>
			</div>
		<% end %>
		<h3 class="accordionButton"><a href="javascript: void(0);">Latest Videos</a></h3>
		<div class="trending-box accordionContent">
			<%= render :partial => "sidebars/video_list_box", :locals => {:sidebar_videos => @sidebar_videos, :user_list => false }%>
		</div>
		<h3 class="accordionButton"><a href="javascript: void(0);">Trending Now</a></h3>
		<div class="trending-box accordionContent">
			<%= render :partial => "sidebars/video_list_box", :locals => {:sidebar_videos => @trending_videos, :user_list => false }%>
		</div>
	</div>
	<%= render :partial => "sidebars/active_users_box" %>
</div>