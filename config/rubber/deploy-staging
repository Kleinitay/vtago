# config/rubber/deploy-delayed_job.rb

namespace :rubber do
  namespace :staging do

    after "fix_and_compile:fix", "rubber:uploader:restart"

    desc "Stop the delayed_job process"
    task :stop, :roles => :staging do
      run "cd #{current_path}; RAILS_ENV=#{rails_env} script/delayed_job -n 5 --queues=upload,detect stop"
    end

    desc "Start the delayed_job process"
    task :start, :roles => :staging do
      run "cd #{current_path}; RAILS_ENV=#{rails_env} script/delayed_job -n 5 --queues=upload,detect start"
    end

    desc "Restart the delayed_job process"
    task :restart, :roles => : staging do
      run "cd #{current_path}; RAILS_ENV=#{rails_env} script/delayed_job -n 5 --queues=upload,detect restart"
    end

  end
end
